{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**", "dist/public/**"]
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "server/index.ts" },
    { "source": "/(.*)", "destination": "server/index.ts" }
  ]
}
